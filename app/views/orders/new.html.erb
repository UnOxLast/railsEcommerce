<div class="container">

<%= form_for(@order) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true, autofocus: true, value: current_user.username %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email, value: current_user.email %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>