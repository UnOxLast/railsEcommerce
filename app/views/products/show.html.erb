<div class="container">
	<div class="card-header">Produk</div>
		<div class="card">
			<div class="container-fluid">
				<div class="wrapper row">
					<div class="preview col-md-6">
						<div class="preview-pic tab-content">
              				<% if @product.image_product.attached?%>
                				<img src="<%= (url_for(@product.image_product))%>" class="img-fluid" width="300" height="300" alt="">
              				<%else%>
                				<%= image_tag "logo.png", width:"30", height:"200", class:"card-img-top" %>
              				<%end%>
						</div>
					</div>
					<div class="details col-md-6">
            			<h3 class="product-titlee"><%= @product.name %></h3>
						<div class="rating">
							<div class="stars">
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star checked"></span>
								<span class="fa fa-star"></span>
								<span class="fa fa-star"></span>
							</div>
						</div>
            			<p class="product-description">Merek : <%= @product.brand.byBrand %></p>
						<p class="product-description">Tipe : <%= @product.type.byType %></p>
						<p class="product-description">Kuantitas : <%= @product.stock %></p>
						<h4 class="price">Harga : <%= @product.price %></h4>
						<div class="action">
							<%= button_to "Add #{@product.name} to cart", line_items_path(:product_id => @product.id), class:"btn btn-outline-info"%>
							<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
						</div>
					</div>
				</div>
			</div>
		</div>
		<% if current_user.try(:admin?) %>
			<%= link_to "Edit", edit_product_path(@product), class:"btn btn-warning" %>
			<%= link_to "Back to Menu", home_dashboard_path, class:"btn btn-dark" %>
		<%else%>
			<%= link_to "Back to Home", root_path, class:"btn btn-dark" %>
		<%end%>
</div>

