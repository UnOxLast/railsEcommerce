<section class="vh-200" style="background-color: #508bfc;">
  <section class="h-100 gradient-custom">
    <div class="container py-5">
      <div class="row d-flex justify-content-center my-4">
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Keranjang</h5>
            </div>
            <!-- ISI PRODUK -->
            <div class="card-body">
              <%= render "cart" %>
            </div>
          </div>
          <div class="mb-0">    
          </div>
        </div>
      
            <!-- Tabel -->
        <div class="col-md-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Total</h5>
            </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                 Produk
                 <span><%= number_to_currency(@cart.sub_total, unit:'IDR ') %></span>
               </li>
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                  Pengiriman
                  <span>Gratis</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                  <div>
                    <strong>Total Pembayaran</strong>
                  </div>
                  <span><strong><%= number_to_currency(@cart.sub_total, unit:'IDR ') %></strong></span>
                </li>
              </ul>
              <%= link_to "Bayar", new_order_path, class:"btn btn-primary btn-lg btn-block" %>
            </div>
          </div>
          <li class="text-start text-md-center">
            <span><%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger btn-sm me-1 mb-2" %></span>
          </li>
        </div>
      </div>
    </div>
  </section>
</section>